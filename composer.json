{
    "name": "simplecomplex/database",
    "type": "library",
    "description": "Database abstraction for transparent MariaDB, MS SQL interaction.",
    "keywords": ["database", "MariaDB", "MySQL", "MS SQL"],
    "homepage": "https://github.com/simplecomplex/php-database",
    "license": "MIT",
    "authors": [
        {
            "name": "Jacob Friis Mathiasen",
            "email": "jacob.friis@simplecomplex.net"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/log": "^1.0",
        "simplecomplex/utils": "^1.3.2 || dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "simplecomplex/cache": "^1.2.1 || dev-develop",
        "simplecomplex/config": "^1.3.1 || dev-develop",
        "simplecomplex/inspect": "^2.2.2 || dev-develop",
        "simplecomplex/json-log": "^1.4.2 || dev-develop",
        "simplecomplex/locale": "^1.1.1 || dev-develop",
        "simplecomplex/validate": "^1.0.2 || dev-develop"
    },
    "suggest": {
        "ext-mysqli": "PHP MySQLi extension is required when using MySQL/MariaDB databases.",
        "ext-sqlsrv": "PHP (PECL) Sqlsrv extension is required when using MS SQL DB databases.",
        "simplecomplex/inspect": "Great for logging; better variable dumps and traces."
    },
    "autoload": {
        "psr-4": {
            "SimpleComplex\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleComplex\\Database\\Tests\\": "tests/src/"
        }
    }
}
